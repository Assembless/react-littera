{
  "name": "react-littera",
  "version": "1.0.0",
  "description": "üåê Lightweight react library for handling translations.",
  "main": "dist/index.js",
  "scripts": {
    "start": "webpack-dev-server --open --env.example",
    "serve": "serve ./example/dist",
    "build": "webpack --config webpack.config.js --env.prod --define process.env.NODE_ENV=\"'production'\"",
    "prepublish": "npm run build",
    "test": "jest --config=jest.config.json",
    "test:watch": "jest --config=jest.config.json --watch",
    "test:coverage": "jest --config=jest.config.json --coverage",
    "lint": "eslint . --ext .js",
    "ci": "run-p lint build test:coverage",
    "postci": "cat ./coverage/lcov.info | coveralls"
  },
  "peerDependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^3.0.3",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-router-dom": "^4.1.1",
    "react-test-renderer": "16.7.0",
    "serve": "^10.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DRFR0ST/react-littera.git"
  },
  "keywords": [
    "multilingual",
    "translation",
    "language"
  ],
  "author": "Mike Eling <mike.eling97@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DRFR0ST/react-littera/issues"
  },
  "homepage": "https://github.com/DRFR0ST/react-littera#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
